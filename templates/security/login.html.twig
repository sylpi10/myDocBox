{% extends 'base.html.twig' %}
 {% block stylesheets %}
           <link rel="stylesheet" href="{{ asset('css/login-register.css') }}">
{% endblock %}
{% block title %}Connexion{% endblock %}

{% block body %}

    <div class='container'>
        <header><h1>My Doc<span>Box</span></h1></header>
        <main>
        <h2></h2>
        <form action="" method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
            <table>
            <th><h2 class="h3 mb-3 font-weight-normal">Connectez-vous</h2></th>
            <tr>
                <td colspan="2"> <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus></td>
            </tr>
             <tr>
                <td colspan="2"><input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"> 
                </td>
            </tr>
            <tr>
                <td colspan="2"> <a href="{{ path('app_register') }}" class="menu_element">S'inscrire</a></td>
            </tr>
           
            <tr>
                <td colspan="2" ><button class="btn btn-lg btn-primary" type="submit">
       se connecter
    </button>         
                </td>
            </tr>
            </table>
        </form>
        </main>
    
   
   
    
    

    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    
</div>

{% endblock %}
