{% extends 'base.html.twig' %}

{% block title %}Hello FolderController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% if app.user %}
  <div class="mb-3">
      You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
  </div>
{% endif %}
<h2>Creer un dossier</h2>
{{ form_start(form) }}
  <div class="form__field">{{ form_row(form.name) }}</div>
  <div class="form__field">{{ form_row(form.tag) }}</div>
  <div style="hidden" class="form__field">{{ form_row(form.createdAt) }}</div>
  <div class="form__field">{{ form_row(form.updatedAt) }}</div>
  <button class="form_button" type="submit">Soumettre le dossier</button>
{{ form_end(form) }}
{% endblock %}
